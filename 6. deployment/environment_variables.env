# ===== ZaNuri AI Configuration =====
APP_NAME=ZaNuri 
APP_ENV=production
DEBUG=False
SECRET_KEY=your-super-secure-secret-key-for-zanuri-ai

# ===== Database =====
DATABASE_URL=postgresql://zanuri:${DB_PASSWORD}@db:5432/zanuri_ai
DB_MAX_CONNECTIONS=20
DB_STATEMENT_TIMEOUT=30000

# ===== Redis =====
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# ===== AI Model Configuration =====
MODEL_CACHE_DIR=/home/zanuri/models
MODEL_DOWNLOAD_TIMEOUT=3600

# Primary AI Models
MAIN_MODEL_NAME=zanuri-main-7b
EMBEDDING_MODEL=all-MiniLM-L6-v2
VISION_MODEL=clip-vit-base-patch32

# Model Parameters
MAX_SEQUENCE_LENGTH=4096
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=2048

# ===== API Security =====
ALLOWED_HOSTS=zanuri.ai,www.zanuri.ai,api.zanuri.ai
CORS_ALLOWED_ORIGINS=https://zanuri.ai,https://www.zanuri.ai

# API Rate Limits
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
INFERENCE_RATE_LIMIT=10

# ===== External AI Services =====
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
HUGGINGFACE_TOKEN=${HUGGINGFACE_TOKEN}

# ===== Monitoring & Logging =====
LOG_LEVEL=INFO
LOG_FILE=/home/zanuri/logs/zanuri-ai.log
SENTRY_DSN=${SENTRY_DSN}
PROMETHEUS_METRICS_PORT=8001

# ===== Storage =====
MODEL_STORAGE_PATH=/home/zanuri/models
DATA_STORAGE_PATH=/home/zanuri/data
UPLOAD_FILE_SIZE_LIMIT=104857600  # 100MB

# ===== Email & Notifications =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_HOST_USER=notifications@zanuri.ai
EMAIL_HOST_PASSWORD=${EMAIL_PASSWORD}
ADMIN_EMAIL=admin@zanuri.ai

# ===== Celery Configuration =====
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_TIME_LIMIT=3600

# ===== GPU Configuration =====
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_LIMIT=0.8
TF_FORCE_GPU_ALLOW_GROWTH=true